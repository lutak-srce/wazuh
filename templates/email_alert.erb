  <email_alerts>
    <email_to><%= @alert_email %></email_to>
    <%- if @event_location -%>
    <event_location><%= [@event_location].flatten.compact.join('|') %></event_location>
    <%- end -%>
    <%- if @alert_group -%>
    <group><%= [@alert_group].flatten.compact.join(',') %></group>
    <%- end -%>
    <%- if @do_not_delay -%>
    <do_not_delay />
    <%- end -%>
    <%- if @do_not_group -%>
    <do_not_group />
    <%- end -%>
  </email_alerts>
